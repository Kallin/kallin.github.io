---
layout: default
---
<ul class="whitespace-nowrap mx-auto xl:mx-0 px-4 sm:px-6 md:px-8 xl:px-0 flex space-x-2 sm:space-x-6">
    {% for tag in page.tags %}
        {% case tag %}
            {% when "dev" %}
                {% assign tag_color = 'purple' %}
            {% when "productivity" %}
                {% assign tag_color = 'green' %}
            {% else %}
                {% assign tag_color = 'black' %}
        {% endcase %}
        <li class="relative">
            <button class="bg-{{ tag_color }}-300 hover:bg-{{ tag_color }}-500 text-white py-1 px-2 rounded-full">
                {{ tag | upcase }}
            </button>
        </li>
    {% endfor %}
</ul>

<h1 class="bg-blue-200">{{ page.title }}</h1>
<h2>By {{ site.author }}</h2>
<small class="bg-indigo-200">{{ page.date | date: "%-d %B %Y" }}</small>

<article class="text-lg space-y-6 font-medium">
    {{ content }}
</article>
