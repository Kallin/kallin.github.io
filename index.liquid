---
layout: default
---
<h2 class="bg-red-100">Posts</h2>

<section class="bg-purple-100">
    <ul>
        {% for post in site.posts %}
            <li>
                <a href="{{ post.url }}">{{ post.title }}</a>
            </li>
        {% endfor %}
    </ul>
</section>

<h2 class="bg-red-100">Posts w/ Excerpts</h2>

<section class="bg-purple-100">
    <ul>
        {% for post in site.posts %}
            <li>
                <a href="{{ post.url }}">{{ post.title }}</a>
                {{ post.excerpt }}
            </li>
        {% endfor %}
    </ul>
</section>

<h2 class="bg-red-100">Tags</h2>

<section class="bg-purple-100">
    {% for tag in site.tags %}
        <h3>{{ tag[0] }}</h3>
        <ul>
            {% for post in tag[1] %}
                <li><a href="{{ post.url }}">{{ post.title }}</a></li>
            {% endfor %}
        </ul>
    {% endfor %}
</section>